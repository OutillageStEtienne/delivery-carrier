<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

    <record id="view_partner_dropoff_site_form" model="ir.ui.view">
        <field name="model">partner.dropoff.site</field>
        <field name="inherit_id" ref="delivery_dropoff_site.view_partner_dropoff_site_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="after">
                <group name="laposte" col="4" attrs="{'invisible': [('dropoff_type', '!=', 'laposte')]}">
                    <separator string="La Poste" colspan="4"/>
                    <field name="lot_routing" class="oe_inline"/>
                    <field name="distri_sort" class="oe_inline"/>
                </group>
            </xpath>
        </field>
    </record>

</data>
</openerp>